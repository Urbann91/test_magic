{% extends 'base.html.twig' %}

{% block title %}Тест{% endblock %}

{% block body %}
    <h1>Тест</h1>

    <p>Начало попытки: {{ startTime|date('Y-m-d H:i:s') }}</p>

    <form action="{{ path('quiz_submit') }}" method="post">
        <input type="hidden" name="attemptId" value="{{ attemptId }}">

        <ul>
            {% for question in questions %}
                <li>
                    <h3>{{ question.text }}</h3>
                    {% for option in question.answerOptions %}
                        <div>
                            <input type="checkbox" id="answer_{{ option.id }}" name="answers[{{ question.id }}][]" value="{{ option.id }}">
                            <label for="answer_{{ option.id }}">{{ option.text }}</label>
                        </div>
                    {% endfor %}
                </li>
            {% endfor %}
        </ul>

        <button type="submit">Отправить ответы</button>
    </form>
{% endblock %}